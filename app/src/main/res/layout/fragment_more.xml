<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_ground"
    android:layout_marginTop="80dp"
    android:layout_gravity="start"
    android:paddingBottom="70dp"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/login"
            android:background="@drawable/rounded_frame15"


            >
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/login_icon"
                        android:layout_gravity="center"
                        android:id="@+id/logo"
                        android:layout_margin="10dp"
                        android:layout_centerVertical="true"
                        />


                    <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="30dp"
                        android:layout_toEndOf="@+id/logo"
                        android:layout_gravity="center"
                        >


                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/username"
                            android:text="youmna"
                            android:textSize="16dp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="3dp"
                            />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/usermail"
                            android:layout_toEndOf="@+id/image"
                            android:layout_below="@+id/username"
                            android:text=""
                            android:textColor="#FFFFFF"
                            />
                    </RelativeLayout>

                    <ImageView android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/back_red"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:id="@+id/back1"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <ListView android:id="@+id/list1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:dividerHeight="0dp"
            android:divider="@android:color/transparent"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/powered_by"
                    android:textColor="#FFFFFF"
                    >

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="#BE1522"
                    android:text="@string/emcan"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:id="@+id/txtview_copyname">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layoutDirection="ltr"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"

                    android:id="@+id/txtview_version">
                </TextView>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"></View>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/checkk"></ImageView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtview_update"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
