<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="80dp"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@drawable/back_ground"
   >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#000000">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mainicon"></ImageView>
<com.emcan.zella.TextViewWithFont
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_points"
    android:layout_marginStart="20dp"
    android:textColor="#FFFFFF"
    android:background="@android:color/transparent"
    android:layout_gravity="center_vertical"></com.emcan.zella.TextViewWithFont>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.emcan.zella.TextViewWithFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_message"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"

        android:layout_marginEnd="20dp"></com.emcan.zella.TextViewWithFont>

</LinearLayout>