<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="80dp">

<LinearLayout android:layout_width="match_parent"
    android:layout_marginTop="50dp"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <ImageView android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:layout_gravity="center"
        android:src="@drawable/delivery"
        />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#88d3d3d3"
        android:gravity="start"
        android:layout_marginTop="30dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orderdate"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/p"
            android:layout_alignParentStart="true"
            />
        <ImageView android:src="@drawable/date"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_toEndOf="@+id/p"
            android:layout_marginStart="20dp"
            android:id="@+id/j"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/j"
            android:layout_marginStart="5dp"
            android:id="@+id/date"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orderno"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_below="@+id/p"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/pp"
            android:layout_alignParentStart="true"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/pp"
            android:layout_below="@+id/p"
            android:id="@+id/num"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp">
    <ImageView android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:id="@+id/stat1_gray"
        android:src="@drawable/check_gray" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ready"
            android:layout_below="@+id/stat1_gray"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:id="@+id/t1"/>

        <ImageView android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/check_green"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:id="@+id/stat1_green"
            android:visibility="invisible"/>

        <RelativeLayout android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="#82B204"
            android:layout_marginTop="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="105dp"
           />

        <ImageView android:layout_width="30dp"
            android:layout_height="15dp"
            android:src="@drawable/delivery"
            android:layout_alignParentStart="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="75dp"
            android:visibility="invisible"
            android:id="@+id/deliver1"/>

        <ImageView android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/check_gray"
            android:layout_alignParentStart="true"
            android:layout_marginStart="145dp"
            android:layout_marginTop="49dp"
            android:id="@+id/stat2_gray"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/del"
            android:layout_below="@+id/stat1_gray"
            android:layout_alignParentStart="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:id="@+id/t2"/>

        <ImageView android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/check_green"
            android:layout_alignParentStart="true"
            android:layout_marginStart="145dp"
            android:layout_marginTop="49dp"
            android:id="@+id/stat2_green"
            android:visibility="invisible"/>

        <RelativeLayout android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="#82B204"
            android:layout_marginTop="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="225dp"
            />

        <ImageView android:layout_width="30dp"
            android:layout_height="15dp"
            android:src="@drawable/delivery"
            android:layout_alignParentStart="true"
            android:layout_marginStart="230dp"
            android:layout_marginTop="75dp"
            android:visibility="invisible"
            android:id="@+id/delivery2"/>


        <ImageView android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/stat3_green"
            android:src="@drawable/check_green"
            android:layout_alignParentStart="true"
            android:layout_marginStart="265dp"
            android:layout_marginTop="49dp"
            android:visibility="visible"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery"
            android:layout_below="@+id/stat1_gray"
            android:layout_alignParentStart="true"
            android:layout_marginStart="282dp"
            android:layout_marginTop="10dp"
            android:id="@+id/t3"/>

        <ImageView android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/stat3_gray"

            android:src="@drawable/check_gray"
            android:layout_alignParentStart="true"
            android:layout_marginStart="265dp"
            android:layout_marginTop="49dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:background="@drawable/rounded_button2"
        android:text="@string/show_drvier_location"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
</ScrollView>