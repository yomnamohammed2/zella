<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:layout_marginTop="100dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emcan.zella.fragments.Add_Rate">

    <RatingBar
        android:id="@+id/add_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.1"
        android:isIndicator="false"
        android:paddingTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        style="?android:attr/ratingBarStyleSmall" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addcomment"
        android:textStyle="bold"
        android:layout_below="@+id/add_rate"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:id="@+id/title1"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:id="@+id/title2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:text="@string/write"/>
    <EditText
        android:id="@+id/add_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:lines="5"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title2"
        android:background="@drawable/rounded_corners2"
        android:gravity="start"
        android:textCursorDrawable="@drawable/cursor"
        android:padding="10dp"/>

    <Button
        android:id="@+id/rate"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="@string/send"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:background="@drawable/rounded_corners3"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/add_comment"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>

</ScrollView>