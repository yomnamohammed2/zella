<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="5dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_frame15">

    <ImageView android:layout_height="100dp"
        android:layout_width="120dp"
        android:src="@drawable/mainicon"
        android:scaleType="fitXY"
        android:id="@+id/dish_image"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dish_name"
        android:layout_toEndOf="@+id/dish_image"
        android:text=""
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        />
    <TextView android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dish_image"
        android:id="@+id/dish_details"
        android:layout_below="@+id/dish_name"
        android:text=""
        android:gravity="start"
        android:lines="5"
        android:textColor="#FFFFFF"

        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/dish_details"
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/heart"
        android:id="@+id/love"
        />

</RelativeLayout>