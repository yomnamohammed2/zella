<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:fillViewport="true"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/login_back"
                android:id="@+id/image"/>

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hh"
            android:background="@drawable/rounded_frame15"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="200dp"

            >

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="25dp"

                android:layout_margin="2dp"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardElevation="0dp"
                card_view:contentPadding="0dp">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mm"
                    android:background="@color/colorPrimaryDark"

                    >



                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/colorAccent"
                        android:text="@string/forget"
                        android:layout_centerHorizontal="true"
                        android:textSize="20dp"/>


                    <RelativeLayout android:layout_width="170dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="2dp"
                        android:layout_alignBottom="@+id/tabDots"
                        android:background="@color/colorAccent"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/txt"
                        android:id="@+id/sep"
                        />

                    <ImageView android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/icon"
                        android:src="@drawable/forget_icon"
                        android:layout_below="@+id/sep"
                        android:layout_marginTop="30dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="30dp"
                        android:id="@+id/rel2"
                        android:layout_below="@+id/icon"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginStart="40dp"
                            android:background="@drawable/rounded_frame15"
                            android:layout_marginEnd="40dp"

                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                >

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/mobile"/>



                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingEnd="10dp"
                                    android:paddingStart="5dp"
                                    android:paddingTop="5dp"
                                    android:textSize="15sp"

                                    android:paddingBottom="5dp"
                                    android:maxLines="1"
                                    android:hint="@string/phone"
                                    android:inputType="phone"
                                    android:layout_gravity="center"
                                    android:id="@+id/phone"

                                    android:textColor="#FFFFFF"
                                    android:textColorHint="#FFFFFF"
                                    android:background="@android:color/transparent"></EditText>

                            </LinearLayout>
                        </RelativeLayout>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:text="@string/continu"
                        android:textStyle="normal"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:layout_below="@+id/rel2"
                        android:background="@drawable/rounded_corners30"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:textAllCaps="false"
                        android:padding="10dp"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</ScrollView>