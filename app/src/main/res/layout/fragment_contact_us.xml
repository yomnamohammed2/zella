<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/back_ground"
    android:layout_marginTop="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">


        <ImageView android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/contact_icon"
            android:id="@+id/image"/>


        <RelativeLayout
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/rounded_frame15"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/card1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                >
                <ImageView android:id="@+id/phone_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/phone"
                    android:layout_alignParentStart="true"
                    />

                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="16dp"
                    android:text=""
                    android:layout_centerVertical="true"

                    android:textColor="#FFFFFF"
                    android:layout_toEndOf="@+id/phone_icon"
                    android:layout_marginStart="20dp"

                    android:id="@+id/phone"/>

                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="16dp"
                    android:text=""
                    android:layout_centerVertical="true"

                    android:textColor="#FFFFFF"
                    android:layout_toEndOf="@+id/phone"
                    android:layout_marginStart="10dp"

                    android:id="@+id/phone1"/>

            </RelativeLayout>
        </RelativeLayout>



        <RelativeLayout android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/rounded_frame15"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/card2"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                >
                <ImageView android:id="@+id/web_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/web"
                    android:layout_alignParentStart="true"
                    />

                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="14dp"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="#FFFFFF"
                    android:layout_toEndOf="@+id/web_icon"
                    android:layout_marginStart="20dp"

                    android:id="@+id/web"/>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/rounded_frame15"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/card7"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                >
                <ImageView android:id="@+id/email_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mail"
                    android:layout_alignParentStart="true"
                    />

                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="14dp"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="#FFFFFF"
                    android:layout_toEndOf="@+id/email_icon"
                    android:layout_marginStart="20dp"

                    android:id="@+id/email"/>

            </RelativeLayout>
        </RelativeLayout>



        <RelativeLayout android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/rounded_frame15"


            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/card3"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                >
                <ImageView android:id="@+id/location_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/location"
                    android:layout_alignParentStart="true"
                    />

                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="14dp"
                    android:text=""
                    android:layout_centerVertical="true"

                    android:textColor="#FFFFFF"
                    android:layout_toEndOf="@+id/location_icon"
                    android:layout_marginStart="20dp"

                    android:id="@+id/address"/>

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/rounded_frame15"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/card4"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                >
                <ImageView android:id="@+id/facebook_icon"

                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/facebook"
                    android:layout_alignParentStart="true"
                    />

                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="14dp"
                    android:text="@string/facebook"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="#FFFFFF"
                    android:layout_toEndOf="@+id/facebook_icon"
                    android:layout_marginStart="20dp"

                    android:id="@+id/facebook"/>

            </RelativeLayout>
        </RelativeLayout>



        <RelativeLayout android:layout_height="wrap_content"
            android:background="@drawable/rounded_frame15"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/card5"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                >
                <ImageView android:id="@+id/twitter_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/twitter"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/twitter_icon"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/twitter"
                    android:textColor="#FFFFFF"

                    android:textSize="14dp" />

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout android:layout_height="wrap_content"
            android:background="@drawable/rounded_frame15"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:visibility="gone"
            android:id="@+id/card6"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                >
                <ImageView android:id="@+id/insta_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/instagram"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/insta_icon"
                    android:ellipsize="end"
                    android:gravity="start"

                    android:lines="1"
                    android:text="@string/instagram"
                    android:textColor="#FFFFFF"

                    android:textSize="14dp" />

            </RelativeLayout>
        </RelativeLayout>



        <RelativeLayout android:layout_height="wrap_content"
            android:background="@drawable/rounded_frame15"
            android:layout_marginStart="30dp"
            android:visibility="gone"
            android:layout_marginEnd="30dp"
            android:id="@+id/card8"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                >
                <ImageView android:id="@+id/snap_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/snapchat"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/snap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/snap_icon"
                    android:ellipsize="end"
                    android:gravity="start"

                    android:lines="1"
                    android:text="@string/snapchat"
                    android:textColor="#000000"

                    android:textSize="14dp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/rounded_frame15"
            android:layout_marginStart="30dp"
            android:visibility="gone"

            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/card9"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                >
                <ImageView android:id="@+id/youtube_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youtube"
                    android:layout_alignParentStart="true"
                    />

                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="14dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="@string/youtube"
                    android:layout_centerVertical="true"

                    android:textColor="#FFFFFF"
                    android:layout_toEndOf="@+id/youtube_icon"
                    android:layout_marginStart="20dp"

                    android:id="@+id/youtube"/>

            </RelativeLayout>
        </RelativeLayout>




    </LinearLayout>

</ScrollView>