<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="190dp"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded10"
    android:gravity="center"
   >

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_frame15"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_rel"
            >
        <com.emcan.zella.Rounded_image_corners1
            android:id="@+id/image"
            android:layout_width="175dp"
            android:layout_margin="2dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/image_rel"
            android:layout_centerHorizontal="true">

            <ImageView android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cart_green"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/name"
                android:id="@+id/add"
                />

            <TextView android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text=""/>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/name"
                android:lines="1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:textSize="15sp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/price"
                android:lines="1"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"/>
        </RelativeLayout>
    </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>