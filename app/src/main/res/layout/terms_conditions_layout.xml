<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/out"
    android:background="#22000000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:padding="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_white">


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt33"
            android:text="@string/total"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />


        <RelativeLayout android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txt33"
            android:layout_marginStart="10dp"
            android:gravity="start"
            android:layout_below="@+id/payment_rel"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_price"
                android:textStyle="bold"
                android:text="10"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="BD"
                android:layout_toRightOf="@+id/total_price"
                android:layout_marginTop="20dp"
                android:id="@+id/coin"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="بمتابعة الطلب انت توافق علي  "
            android:layout_below="@+id/txt33"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="الشروط والاحكام "
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/txt33"
            android:layout_toLeftOf="@+id/txt"/>



<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txt1"
    android:layout_marginTop="10dp"
    android:gravity="center">

        <Button android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:text="متابعة "
            android:id="@+id/confirm"
            />

        <Button android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:text="الغاء"
            android:layout_margin="10dp"
            android:id="@+id/cancel"
         android:layout_toLeftOf="@+id/confirm"
            />
</RelativeLayout>


    </RelativeLayout>
</RelativeLayout>